<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundomu"
    android:orientation="vertical"
    android:id="@+id/linearBackground"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40sp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="40sp"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:text=" Siga as nossas \nRedes Sociais!"
        android:textAlignment="center"
        android:textColor="#585252"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="246dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="42dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="288dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_facebook"
            android:layout_width="107dp"
            android:layout_height="96dp"
            android:background="@drawable/face" />

        <Button
            android:id="@+id/btn_instagram"
            android:layout_width="107dp"
            android:layout_height="96dp"
            android:background="@drawable/insta" />


        <Button
            android:id="@+id/btn_youtube"
            android:layout_width="87dp"
            android:layout_height="96dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/yout" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="397dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="269dp"
        android:fontFamily="@font/quicksand_light"
        android:gravity="center"
        android:text="/karaokebarcuritiba"
        android:textAlignment="center"
        android:textColor="#332E32"
        android:textSize="25sp" />

</RelativeLayout>